<div class="row advantages white-block white-block_clear">
    <div class="advantages__row-wrapper row">
        <div class="advantages__row-title row col xs-12 xs-center">
            <h2 class="advantages__title">
                {{ __scope.title }}
            </h2>
        </div>
        <div class="advantages__row-content row xs-start md-center">
            {% for item in __scope.items %}
                <div class="col xs-12 md-6 lg-4 xs-start">
                    <div class="advantage">
                        <div class="advantage__img">
                            <img class="" src="{{ item.icon }}" alt="">
                        </div> 
                        <div class="advantage__content">
                            <div class="advantage__title">
                                {{ item.title | raw }}
                            </div>
                            <div class="advantage__text">
                                {{ item.description }}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>