<div class="clients row">
    <div class="col xs-12">
        <div class="">
            <div class="clients__row-title">
                <h2 class="clients__title col xs-12 xs-center">
                    {{ __scope.title }}
                </h2>
            </div>
            <div class="clients__row-content row xs-around">
                {% for item in __scope.items %}
                    <div class="col xs-12 md-4 xs-center">
                        <div class="whatItem">
                            <a class="whatItem__link" href="{{ item.src }}" target="_blank">
                                <img class="whatItem__img" src="{{ item.img }}" />
                            </a>
                            <div class="whatItem__link">
                                <a class="btn btn_small btn_colored" href="{{ item.src }}" target="_blank">
                                    {{ item.title }}
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
